{
  "name": "@qvlt/core-logger",
  "version": "0.0.2",
  "description": "Structured logging for web applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:types": "pnpm run build && node -e \"require('fs').writeFileSync('dist/index.test-d.ts', 'import { expectType } from \\\"tsd\\\";\\nimport * as pkg from \\\"./index\\\";\\n\\n// Test that global getLogger exists and has the right shape\\nconst globalLogger = globalThis.getLogger;\\nexpectType<typeof globalLogger>(globalLogger);\\n\\nconst l = pkg.getLogger(\\\"comp\\\");\\nl.info(\\\"hello\\\");\\n')\" && tsd",
    "smoke": "pnpm run build && node tests/smoke-node.cjs && node tests/smoke-esm.mjs",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --ignore-path node_modules/@qvlt/config-prettier/ignore --write .",
    "format:check": "prettier --ignore-path node_modules/@qvlt/config-prettier/ignore --check .",
    "release:tag": "bash -lc 'set -euo pipefail; [ \"$(git rev-parse --abbrev-ref HEAD)\" = main ] || { echo \"Error: run on main\"; exit 1; }; V=$(node -p \"require(\\\"./package.json\\\").version\"); git tag v$V -m \"Release $V\"; git push origin v$V'"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@qvlt/config-eslint": "^0.0.2",
    "@qvlt/config-prettier": "^0.0.2",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "tsd": "^0.33.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "logging",
    "structured",
    "web",
    "typescript"
  ],
  "author": "Qvlt",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qvlt/core-logger.git"
  },
  "bugs": {
    "url": "https://github.com/qvlt/core-logger/issues"
  },
  "homepage": "https://github.com/qvlt/core-logger#readme",
  "packageManager": "pnpm@10.15.0"
}
